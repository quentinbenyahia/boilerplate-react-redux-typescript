{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "importHelpers": true
    },
    "include": [
        "./src/**/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "webpack",
    ],
}